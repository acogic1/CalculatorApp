<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="ba.unsa.etf.rma.adem.calcularorapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="Welcome to Silicon Calculator"
        android:textSize="24sp"
        tools:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/first_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:hint="Enter 1st Number"/>

    <EditText
        android:id="@+id/second_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_input"
        android:layout_alignStart="@+id/first_input"
        android:layout_below="@+id/first_input"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter 2nd Number"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/addition_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/second_input"
        android:layout_marginTop="27dp"
        android:background="@android:color/holo_green_dark"
        android:text="+"
        tools:layout_width="@android:dimen/notification_large_icon_width" />

    <Button
        android:id="@+id/substracion_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addition_btn"
        android:layout_alignBottom="@+id/addition_btn"
        android:layout_toEndOf="@+id/addition_btn"
        android:layout_toRightOf="@+id/addition_btn"
        android:background="@android:color/holo_orange_dark"
        android:text="-"
        tools:layout_width="@android:dimen/notification_large_icon_width" />

    <Button
        android:id="@+id/multiplication_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/substracion_btn"
        android:layout_alignBottom="@+id/substracion_btn"
        android:layout_toEndOf="@+id/substracion_btn"
        android:layout_toRightOf="@+id/substracion_btn"
        android:background="@android:color/holo_purple"
        android:text="*"
        tools:layout_width="@android:dimen/notification_large_icon_width" />

    <Button
        android:id="@+id/division_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/multiplication_btn"
        android:layout_alignBottom="@+id/multiplication_btn"
        android:layout_toEndOf="@+id/multiplication_btn"
        android:layout_toRightOf="@+id/multiplication_btn"
        android:background="@android:color/darker_gray"
        android:text="/"
        tools:layout_width="@android:dimen/notification_large_icon_width" />

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@android:color/holo_red_light"
        android:text="Clear" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multiplication_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Result:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/display_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="0.00"
        android:textColor="@android:color/background_light"
        android:textSize="36sp" />
</RelativeLayout>
